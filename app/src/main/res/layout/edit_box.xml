<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="70dp"
    android:background="@android:color/white"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:id="@+id/layout_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/edit_img_flag"
            android:src="@drawable/us_2x"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/edit_tv_currency_code"
            android:layout_toRightOf="@id/edit_img_flag"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_centerVertical="true"
            android:textSize="22sp"
            android:text="USD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_edit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/layout_img">
        <EditText
            android:id="@+id/edit_editbox"
            android:layout_width="match_parent"
            android:textSize="22sp"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:maxLines="1"
            android:inputType="number"
            android:hint="请输入"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/edit_tv_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_editbox"
            android:gravity="left"
            android:textSize="15sp"
            android:text="@string/USD"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>